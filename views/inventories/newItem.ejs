<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <% if (inventory.owner.equals(user?._id)) { %>
    <form action="/inventories/<%= inventory._id %>/items" method="post">
      <label>
        Item Name:
        <input type="text" name="name">
      </label>
      <label>
        Brand:
        <input type="text" name="brand">
      </label>
      <label>
        Quantity:
        <input type="number" name="quantity">
      </label>
      <label>
        Unit:
        <select name="unit" >
          <option value="count(s)" selected>count(s)</option>
          <option value="lb(s)">lb(s)</option>
          <option value="ltr(s)">ltr(s)</option>
        </select>
      </label>
      <label>
        Utility:
        <input type="range" name="utility" min="1" max="10" value="3">
      </label>
      <button type="submit">Add</button>
    </form>
  <% } %>
</main>

<%- include('../partials/footer') %>